@using GameStore.Contracts.Categories

@model IEnumerable<CategoryDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome Categories List</h1>
    <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-outline-info">Add new Game</a>

</div>
<div class="container ">
    <div class="row my-1">
        <ul>
            @foreach (CategoryDTO category in Model)
            {
                <li>
                    <a asp-controller="Category" asp-action="Edit"
                   asp-route-id="@category.Id" class="btn btn-link">@category.Name</a>
                </li>
            }
        </ul>
    </div>
</div>