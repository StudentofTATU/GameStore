@using GameStore.Web.ViewModels.Users

@model UserViewModel;
@{
    ViewData["Title"] = "User Edit ";
}
<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">User edit</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                                <input asp-for="Id" type="hidden"
                                value="@Model.Id">
                                <div class="form-group mb-3">
                                    <input asp-for="FirstName" class="form-control 
                                        form-control-lg" placeholder="Enter FirstName" value="@Model.FirstName"  />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <input asp-for="LastName" class="form-control form-control-lg"
                                           placeholder="Enter LastName" value="@Model.LastName" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <input asp-for="UserName" class="form-control form-control-lg"
                                           placeholder="Enter UserName" value="@Model.UserName" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class=" form-group mb-3">
                                    <input asp-for="Email" class="form-control form-control-lg"
                                           placeholder="Enter email" value="@Model.Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

@*                                <div class=" form-group mb-3">
                                    <input asp-for="Password" type="password"
                                           class="form-control form-control-lg" 
                                           placeholder="Enter password" value="@Model.Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>*@

                                <div class="row">
                                    <div class="col text-end">
                                        <button class="btn btn-success btn-lg" type="submit">Update</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>