@using GameStore.Web.ViewModels.Users

@model LogInViewModel

<div class="container   ">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">Login</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="Login" method="post">
                                <div class="form-group mb-3">
                                    <div class="col text-end">
                                    <input asp-for="UserName" class="form-control form-control-lg"
                                           placeholder="Enter user name" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class=" form-group mb-3">
                                    <div class="col text-end">
                                        <input asp-for="Password" type="password"
                                               class="form-control form-control-lg" placeholder="Enter password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class=" form-group mb-3">
                                    <div class="col text-start">
                                        @Html.CheckBoxFor(model=> model.Remember) Remember Me
                                        @*<input asp-for="Remember" type="checkbox" name="RememberMe" title="Remember Me" /> Remember Me*@
                                        @*<span asp-validation-for="Remember" class="text-danger"></span>*@
                                    </div>
                                </div>
                               
                                <div class="form-group mb-3">
                                    <div class="col text-end">
                                        <button class="btn btn-success btn-lg" type="submit">Login</button>
                                    </div>
                                </div>
                                <a asp-area="" asp-controller="User" asp-action="Register"> Register </a>
                                @if (TempData["message"] != null)
                                {
                                    <div class="msg">@TempData["message"]</div>
                                }
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>